ion-view(title='Dashboard')
  ion-content.has-header.padding
    .list
      label.item.item-input.item-select
        .input-label
          | Per√≠odo
        select(ng-model='config.searchTime', required='', ng-options='f.interval as f.label for f in searchTime')

    .chartBox.contentBorderBox-2
      header
        h3
          | Status de pedidos
      ul.barList
        li(ng-repeat='status in data.dashboard_status_overview.status_array')
          | {{ status.status }}
          a.clickable(ng-click='filterTransactions("state", status.shipment_table_state)')
            span(ng-style='{"width" : ( ( status.amount / data.dashboard_status_overview.total_amount ) * 100 ) + 1 + "%"}')
            i.value {{ status.amount }}